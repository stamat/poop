{
  "serve" : {
    "port": 4040,
    "base": "/"
  },
  "livereload": true,
  "watch": [
    "src"
  ],
  "includePaths": [
    "node_modules"
  ],
  "script": {
    "in": "src/js/main.ts",
    "out": "dist/scripts.js",
    "options": {
      "sourceMap": true,
      "minify": true,
      "rmNonMinified": true,
      "format": "iife",
      "target": "es2019"
    }
  },
  "style": {
    "in": "src/scss/index.scss",
    "out": "dist/styles.css",
    "options": {
      "sourceMap": true,
      "minify": true,
      "rmNonMinified": true
    }
  }
}
